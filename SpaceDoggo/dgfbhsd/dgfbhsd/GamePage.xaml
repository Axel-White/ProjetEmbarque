<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dgfbhsd.GamePage">
    <ContentView.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Let's Play !" HorizontalTextAlignment="Center" TextColor="DarkOrange" FontSize="36"/>
                <!--<Label Text=""  HorizontalTextAlignment="Center" TextColor="DarkOrange" FontSize="36"/>-->
            </Frame>
            <Button Text="Win" Padding="30,10,30,10"/>
            <Button Text="Failed" Padding="30,10,30,10"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>